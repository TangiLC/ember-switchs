{
	"name": "emberswitches",
	"version": "1.0.0",
	"description": "Ember+ protocol front-end switches",
	"main": "index.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"keywords": [
		"ember+",
		"audio"
	],
	"author": "Tangi LE CADRE",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.7.7",
		"dgram": "^1.0.1",
		"emberplus": "^1.0.0",
		"express": "^4.19.2",
		"fs": "^0.0.1-security",
		"node-emberplus": "^3.0.6",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"electron": "^32.0.2",
		"electron-builder": "^24.0.0"
	},
	"build": {
		"appId": "com.emberswitch.id",
		"productName": "Ember+Switches",
		"copyright": "Â© 2024 Talec",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"files": [
			"index.js",
			"build/**/*",
			"assets/**/*",
			"public/**/*",
			"node_modules/**/*",
			"package.json",
			"!.vscode/",
			"!coverage/"
		],
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"icon": "build/icon.ico"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility",
			"icon": "build/icon.png"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		}
	}
}
